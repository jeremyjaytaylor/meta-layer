{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "http:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://slack.com/**"
        },
        {
          "url": "https://files.slack.com/**"
        },
        {
          "url": "https://app.asana.com/**",
          "method": "*"
        }
      ],
      "deny": []
    }
  ]
}